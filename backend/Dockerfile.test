# Dockerfile for local ANNY testing (CPU only)
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.local/bin:$PATH"

WORKDIR /app

# Install PyTorch CPU-only
RUN pip install torch torchvision --index-url https://download.pytorch.org/whl/cpu

# Install trimesh and other dependencies
RUN pip install trimesh numpy scipy

# Clone and install ANNY
RUN git clone https://github.com/naver/anny.git /anny && \
    cd /anny && pip install -e .

# Copy test script
COPY scripts/test_anny_fitting.py /app/test_anny_fitting.py

# Create mount point for PLY files
VOLUME /data

ENTRYPOINT ["python", "/app/test_anny_fitting.py"]
CMD ["/data/mesh.ply"]
