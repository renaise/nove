# Novia Backend Environment Variables

# Database
NOVIA_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/novia

# AWS S3
NOVIA_AWS_REGION=us-east-1
NOVIA_S3_BUCKET=novia-assets

# Gemini API (Nano Banana Pro)
NOVIA_GEMINI_API_KEY=your_gemini_api_key_here

# SAM-3D-Body Model Paths
NOVIA_SAM3D_CHECKPOINT_PATH=./checkpoints/sam-3d-body-dinov3/model.ckpt
NOVIA_MHR_MODEL_PATH=./checkpoints/sam-3d-body-dinov3/assets/mhr_model.pt

# Server
NOVIA_HOST=0.0.0.0
NOVIA_PORT=8000
NOVIA_DEBUG=true
