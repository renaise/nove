# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/novia

# Google GenAI (Nano Banana Pro)
GOOGLE_GENAI_API_KEY=your-api-key-here

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=novia-images
R2_PUBLIC_URL=https://your-r2-public-url.com

# Temporal
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=try-on-queue

# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-secure-random-string

# Apple Sign In
APPLE_TEAM_ID=your-team-id
APPLE_CLIENT_ID=com.yourcompany.novia
APPLE_KEY_ID=your-key-id
APPLE_PRIVATE_KEY_PATH=./keys/AuthKey.p8

# App
APP_ENV=development
APP_DEBUG=true
CORS_ORIGINS=["http://localhost:3000"]
